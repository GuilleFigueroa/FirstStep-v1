# Frontend Environment Variables (VITE_* prefix for Vite)
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Backend Environment Variables (for Vercel Serverless Functions)
# Configure these in Vercel Dashboard → Settings → Environment Variables

# Supabase Backend (Service Role Key for admin operations)
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# OpenAI API (will be configured in PASO 4)
OPENAI_API_KEY=your_openai_api_key_here

# Lemon Squeezy (Payment Gateway)
# Get these from: https://app.lemonsqueezy.com/settings/api
LEMON_SQUEEZY_API_KEY=your_lemon_squeezy_api_key_here
LEMON_SQUEEZY_STORE_ID=your_store_id_here

# Lemon Squeezy Product Variant IDs (from Products section)
# Create products first, then get variant IDs for each plan
LEMON_SQUEEZY_VARIANT_STARTER=your_starter_variant_id_here
LEMON_SQUEEZY_VARIANT_PRO=your_pro_variant_id_here

# Lemon Squeezy Webhook Secret (from Webhooks section)
# Generate this when creating the webhook endpoint
LEMON_SQUEEZY_WEBHOOK_SECRET=your_webhook_secret_here
